<% if micropost.liked_by? current_user %>
    <%= link_to "評価を消す", micropost_likes_path(micropost.id), method: :delete, :id => "likes_ajax_#{micropost.id}", :class => "sh_mi_lik", remote: true %>
<% else %>
    <%= link_to "評価", micropost_likes_path(micropost.id), method: :post, :id => "likes_ajax_#{micropost.id}", :class => "sh_mi_lik", remote: true %>
<% end %>