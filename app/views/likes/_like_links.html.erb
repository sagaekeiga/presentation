<% if micropost.liked_by? current_user %>
    <%= link_to "いいねを取り消す", micropost_likes_path(micropost.id), method: :delete, :id => "likes_ajax_#{micropost.id}", remote: true %>
<% else %>
    <%= link_to "いいね！", micropost_likes_path(micropost.id), method: :post, :id => "likes_ajax_#{micropost.id}", remote: true %>
<% end %>