<div class="top_content center-block">
<%= link_to "編集", edit_micropost_path %>
<h1>内容</h1>
<%= @micropost.title %><br />
<%= @micropost.rank %>
<%= qiita_markdown(@micropost.content) %><br />

<%= user_like(@micropost.user, @micropost) %>
<%= user_clip(@micropost.user, @micropost) %>

<%= form_for(@comment, html: { multipart: true }) do |f| %>
<div class="form-group">
    <%= f.text_area :body, placeholder: "コメントを書いてください。", style: :"resize: none;", class: :"comment-form center-block form-control"%>
</div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :micropost_id, :value => @micropost.id %>
    <%= f.submit "コメントする", class: "btn btn-primary btn-xs" %>
<% end %>



<h1>コメント一覧</h1>
<% @comments. each do |comment| %>
    <% if user_signed_in? && comment.user == current_user %>
    <%= comment.id %>
    <%= comment.body %><br />
    <%= link_to '削除', comment_path(comment), method: :delete %><br />
    <% end %>
<% end %>
</div>