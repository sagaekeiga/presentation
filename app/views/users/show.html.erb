<% @user ||= current_user %>
<div class="top_content center-block">
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
<%= render 'follow_form' %>
<%= @user.name %>
<%= @user.job %>
<%= @user.prefecture %>
<%= @user.profile %>
<%= @user.blog %>
</div>