
<div class="us_sh_top center-block">
  <div class="di_inline_t">
    <div class="us_sh_left"><!--   左サイド   -->
        <div id="container">
          <div id="main">　</div>
            <div id="sidebar"><!-- サイドバー -->
              <div id="nav">
                <div class="b_10"></div>
                <div class="us_sh_image center-block"><!-- ログインユーザーアイコン -->
                  <%= image_tag(gravatar_for(@user), alt: @user.email, class:"gravatar center-block") %>
                </div>
                <div class="user_name center-block"><%= @user.name %></div><!-- ログインユーザー名 -->
                <div class="user_created center-block"><%= date_format(@user.created_at) %></div><!-- ログインユーザー登録日 -->
                <div class="user_option center-block">オプション</div><!-- ログインユーザー登録日 -->
                <div class="user_edit center-block"><%= link_to "プロフィールを編集する", edit_user_registration_path %></div><!-- ログインユーザー登録日 -->
              </div>
            </div>
        </div>
        
        <div class="us_sh_left_bottom center-block"><!-- 左サイド下部  -->
        
          <div class="us_sh_left_bottom_title1 center-block">
              <strong id="following" class="stat">
                フォロー　<%= @user.following.count %>
              </strong>
          </div>
          
          <div class="us_sh_left_bottom_con1 center-block"><!-- フォローアイコン  -->
            <% @following_users.first(16).each do |user| %>
             <%= image_tag(gravatar_for(user), alt: user.email, class:"gravatar", :size => '30x30') %>
            <% end %>
          </div>
          
          <div class="us_sh_left_bottom_line center-block"></div><!--  線   -->
          
          <div class="us_sh_left_bottom_title1 center-block">
              <strong id="following" class="stat">
                フォロワー　<%= @user.followers.count %>
              </strong>
          </div>
          
          <div class="us_sh_left_bottom_con1 center-block"><!-- フォロワーアイコン  -->
            <% @followers_users.first(16).each do |user| %>
             <%= image_tag(gravatar_for(user), alt: user.email, class:"gravatar", :size => '30x30') %>
            <% end %>
          </div>
          <div class="us_sh_left_bottom_follow_bu center-block"><%= render 'follow_form' %></div>
        </div>
        
    </div>
  </div>

<div class="di_inline_t">
  <div class="us_sh_right"><!--   右サイド   -->
   <div class="us_sh_right_top center-block"><!--   右サイド上部   -->
     <ul class="nav nav-tabs">
       <li><a href="#home2" data-toggle="tab">プロフィール</a></li>
       <li><a href="#prof2" data-toggle="tab">グラフ</a></li>
       <li><a href="#msgs2" data-toggle="tab">予備</a></li>
     </ul><!-- nav-tabs -->
      
     <div class="tab-content">
       <div class="tab-pane fade in active" id="home2"><!--      プロフィール      -->
        <%= @user.name %>
        <%= @user.job %>
        <%= @user.prefecture %>
        <%= @user.profile %>
        <%= @user.blog %>
       </div>
       
       <div class="tab-pane fade" id="prof2"><!--      グラフ      -->
       </div>
       
       <div class="tab-pane fade" id="msgs2"><!--      予備      -->
          予備
       </div>
     </div><!-- tab-content -->
   </div>
   
   <div class="us_sh_right_middle center-block"><!--   右サイド中部   -->
   </div>
   
   <div class="us_sh_right_bottom center-block"><!--   右サイド下部   -->
     <ul class="nav nav-tabs"><!--   複数タブ下部   -->
       <li><a href="#home3" data-toggle="tab">投稿</a></li>
       <li><a href="#prof3" data-toggle="tab">クリップ</a></li>
       <li><a href="#msgs3" data-toggle="tab">評価</a></li>
       <li><a href="#abc3" data-toggle="tab">フォロー</a></li>
       <li><a href="#def3" data-toggle="tab">フォロワー</a></li>
     </ul><!-- nav-tabs -->
      
     <div class="tab-content">
       <div class="tab-pane fade in active" id="home3"><!--      投稿      -->
         <%= render 'pages/array', microposts: @microposts %>
       </div>
       
       <div class="tab-pane fade" id="prof3"><!--      クリップ      -->
         <%= render 'pages/array', microposts: @clip_mics %>
       </div>
       
       <div class="tab-pane fade" id="msgs3"><!--      評価      -->
         <%= render 'pages/array', microposts: @like_mics %>
       </div>
       
       <div class="tab-pane fade" id="abc3"><!--      フォロー      -->
         <%= render 'relationships/following', users: @following_users %>
       </div>
       
       <div class="tab-pane fade" id="def3"><!--      フォロワー      -->
         <%= render 'relationships/followers', users: @followers_users %>
       </div>
     </div><!-- tab-content -->
   </div>
  </div>
</div>

</div>

<div class="b_100"></div>


<script>
var nav    = $('#nav'),
    offset = nav.offset();

$(window).scroll(function () {
  if($(window).scrollTop() > offset.top - 20) {
    nav.addClass('fixed');
  } else {
    nav.removeClass('fixed');
  }
});
</script>